<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/testing">

    <TextView
        android:id="@+id/middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="83dp"
        android:text="M"
        android:textSize="35dip" 
        android:textColor="#ffffff"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageButton
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/start" />

    <TextView
        android:id="@+id/middleleft2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/middleleft1"
        android:layout_alignBottom="@+id/middleleft1"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:text="M"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:textSize="35dip" />

    <TextView
        android:id="@+id/middleright1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/middle"
        android:layout_alignBottom="@+id/middle"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/start"
        android:text="M"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:textSize="35dip" />

    <TextView
        android:id="@+id/middleleft1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/middle"
        android:layout_alignBottom="@+id/middle"
        android:layout_toLeftOf="@+id/start"
        android:text="M"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:textSize="35dip" />

    <TextView
        android:id="@+id/middleright2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/middleright1"
        android:layout_alignBottom="@+id/middleright1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:text="M"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:textSize="35dip" />

</RelativeLayout>
